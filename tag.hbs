{{!< default}}

<header class="site-header p-8 bg-gray-100 dark:bg-darkSecondary text-center transition-colors duration-300">
    <div class="container mx-auto">
        <h1 class="site-title text-4xl font-heading text-anthracite dark:text-darkText">{{tag.name}}</h1>
        {{#if tag.description}}
            <p class="site-description text-base text-gray-600 dark:text-gray-400">{{tag.description}}</p>
        {{/if}}
    </div>
</header>

<main class="container mx-auto py-8">
    <div class="post-cards grid grid-cols-1 gap-8">
        {{#foreach posts}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

    {{pagination}}
</main>
