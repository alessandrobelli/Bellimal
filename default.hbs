<html lang="en" class="no-transition-on-load">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Mono&family=Atkinson+Hyperlegible&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="{{asset 'css/main.css'}}" />
    <link rel="stylesheet" href="{{asset 'css/animations.css'}}" />
    <link rel="stylesheet" href="{{asset 'css/mobile.css'}}" />
    <link rel="stylesheet" href="{{asset 'css/carousel-mobile.css'}}" />
    <link rel="stylesheet" href="{{asset 'css/related-posts.css'}}" />
    <link rel="stylesheet" href="{{asset 'css/bookmarks.css'}}" />
    <link rel="stylesheet" href="{{asset 'css/social-embeds.css'}}" />
    <link rel="stylesheet" href="{{asset 'css/categories-toggle.css'}}" />
    <link rel="stylesheet" href="{{asset 'css/prism.css'}}" />
    <script>
      // Immediately apply dark mode if stored in localStorage (prevents flash)
      if (localStorage.getItem('darkMode') === 'true') {
      document.documentElement.classList.add('dark'); } else if
      (localStorage.getItem('darkMode') === null && window.matchMedia &&
      window.matchMedia('(prefers-color-scheme: dark)').matches) {
      document.documentElement.classList.add('dark'); }
    </script>
    <title>{{meta_title}}</title>
    {{ghost_head}}
  </head>
  <body
    class="transition-colors duration-300 bg-white dark:bg-dark text-anthracite dark:text-darkText"
  >
    <!-- Mobile Header with Hamburger -->
    <header
      class="fixed top-0 left-0 right-0 z-50 flex items-center justify-between px-4 py-2 transition-colors duration-300 bg-white shadow-sm lg:hidden dark:bg-darkSecondary"
    >
      <a
        href="{{@site.url}}"
        class="text-xl font-heading text-anthracite dark:text-darkText"
      >{{@site.title}}</a>
      <div class="flex items-center space-x-3">
        <button
          id="darkModeToggleMobile"
          class="p-2 transition-colors duration-300 rounded-full focus:outline-none"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="hidden w-5 h-5 dark-icon dark:block"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
            />
          </svg>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="block w-5 h-5 light-icon dark:hidden"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
            />
          </svg>
        </button>
        <button
          id="hamburgerBtn"
          class="text-anthracite dark:text-darkText focus:outline-none"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </header>
    <div class="flex flex-col min-h-screen lg:flex-row">
      <!-- Navigation Section -->
<div
  id="sideNav"
  class="fixed inset-0 z-40 flex items-center justify-center w-full p-6 transition-transform duration-300 -translate-x-full bg-white border-r shadow-xl lg:inset-auto lg:w-64 dark:bg-darkSecondary dark:border-gray-800 lg:fixed lg:h-screen lg:flex-col lg:translate-x-0 lg:shadow-none"
>
  <button
    id="closeNavBtn"
    class="absolute top-4 right-4 text-anthracite dark:text-darkText lg:hidden"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-6 h-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"
      />
    </svg>
  </button>
  <nav class="flex flex-col w-full h-full pt-6 pb-8 px-4 overflow-y-auto">
    <div class="w-full">
      {{> "sidebar-links"}}
    </div>
    <div class="w-full mt-4">
      {{navigation}}
    </div>
    <div class="w-full mt-6">
      {{> "categories-toggle"}}
    </div>
    <div class="flex items-center justify-center w-full mt-auto pt-4">
      <button
        id="darkModeToggle"
        class="p-2 transition-colors duration-300 rounded-full focus:outline-none hover:bg-gray-100 dark:hover:bg-gray-700"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="hidden w-5 h-5 dark-icon dark:block"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
          />
        </svg>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="block w-5 h-5 light-icon dark:hidden"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
          />
        </svg>
      </button>
    </div>
  </nav>
</div>

      <main class="flex-grow w-full p-8 pt-16 overflow-auto lg:ml-64 lg:pt-8">
        {{{body}}}
      </main>
      <script src="{{asset 'js/darkmode.js'}}"></script>
      <script src="{{asset 'js/animations.js'}}"></script>
      <script src="{{asset 'js/mobile-menu.js'}}"></script>
      <script src="{{asset 'js/carousel-mobile.js'}}"></script>
      <script src="{{asset 'js/social-embeds.js'}}"></script>
      <script src="{{asset 'js/lib/prism.js'}}"></script>
      {{ghost_foot}}
    </div>
  </body>
</html>