{{!< default}}

<header class="site-header py-8 bg-gray-100 text-center">
    <div class="container mx-auto">
        <div class="author-profile mb-4">
            {{#if primary_author.profile_image}}
                <img class="primary_author-profile-image mx-auto rounded-full w-24 h-24" src="{{primary_author.profile_image}}" alt="{{primary_author.name}}">
            {{/if}}
            <h1 class="primary_author-name text-4xl font-heading text-anthracite">{{primary_author.name}}</h1>
        </div>
        {{#if primary_author.bio}}
            <p class="primary_author-bio text-lg text-gray-600">{{primary_author.bio}}</p>
        {{/if}}
        {{#if primary_author.location}}
            <p class="primary_author-location text-sm text-gray-500">{{primary_author.location}}</p>
        {{/if}}
        {{#if primary_author.website}}
            <p class="primary_author-website text-sm text-gray-500">
                <a href="{{primary_author.website}}" target="_blank" rel="noopener noreferrer">{{primary_author.website}}</a>
            </p>
        {{/if}}
    </div>
</header>

<main class="container mx-auto py-8">
    <div class="post-cards grid grid-cols-1 gap-8">
        {{#foreach posts}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

    {{pagination}}
</main>
